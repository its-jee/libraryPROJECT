@using Microsoft.AspNetCore.Identity
@model List<USerViewModel>

@{
    ViewData["Title"] = "Users List";
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<h2>Members Borrowing History </h2>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Penalty</th>
            <th>Borrowed Date</th>
            <th>Return Date</th>
            <th>Book</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Email</td>
            <td>@user.Penality</td>
            <td>@user.BorrowedDate.ToShortDateString()</td>
            <td>@user.ReturnDate.ToShortDateString()</td>
            <td>@user.BookTitle</td>


            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New User</a>
