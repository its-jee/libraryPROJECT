@using Library.Data.Entities

@model Library.Data.Entities.BorrowingSystem

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">@((Model.Id == 0 ? "Create New Borrowing Record" : "Edit Borrowing Record"))</h3>
        </div>
        <div class="card-body">
            <form asp-action="@(Model.Id == 0 ? "Create" : "Return")">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="bookId" class="form-label">Book</label>
                        <select asp-for="bookId" class="form-select" asp-items="ViewBag.Books" disabled></select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UserId" class="form-label">User</label>
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users" disabled></select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BorrowingDate" class="form-label">Borrowing Date</label>
                        <input asp-for="BorrowingDate" type="date" class="form-control" disabled />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ReturnDate" class="form-label">Return Date</label>
                        <input asp-for="ReturnDate" type="date" class="form-control" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Penalty" class="form-label">Penalty</label>
                        <input asp-for="Penalty" type="number" step="0.01" class="form-control" disabled />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ActualReturnDate" class="form-label">ActualReturnDate</label>
                        <input asp-for="ActualReturnDate" type="date" class="form-control"  />
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
