@using Library.Data.Entities;
@model Books

@{
    ViewData["Title"] = "Delete Book";
}

<div class="card mt-4">
    <div class="card-header" style="background-color:mediumseagreen !important">
        <h2>Delete Book</h2>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this book?</h4>
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">@Model.Author</dd>

            <dt class="col-sm-2">Genre</dt>
            <dd class="col-sm-10">@Model.Genre</dd>

            <dt class="col-sm-2">ISBN</dt>
            <dd class="col-sm-10">@Model.ISBN</dd>

            <dt class="col-sm-2">Published Year</dt>
            <dd class="col-sm-10">@Model.PublishedYear</dd>

            <dt class="col-sm-2">Copies Available</dt>
            <dd class="col-sm-10">@Model.CopiesAvailable</dd>

            <dt class="col-sm-2">Total Copies</dt>
            <dd class="col-sm-10">@Model.TotalCopies</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Publisher</dt>
            <dd class="col-sm-10">@Model.Publisher</dd>

            <dt class="col-sm-2">Available</dt>
            <dd class="col-sm-10">@Model.IsAvailable </dd>



        </dl>


        <form asp-action="Delete" class="form-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
